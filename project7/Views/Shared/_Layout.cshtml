

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Track Expenses</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/scripts/jquery-1.7.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")


    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default bg-success" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Track Expenses", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home Page", "Index", "Home")</li>




                    @if (User.Identity.IsAuthenticated)
                    {
                       <li><a href="#">@Html.DisplayFor(modelItem => User.Identity.Name)</a></li>
                        <li>@Html.ActionLink("Borrows", "Index", "Borrows")</li>
                        <li>@Html.ActionLink("Debts", "Index", "Debts")</li>
                        <li>@Html.ActionLink("Payments", "Index", "Payments")</li>
                        <li>@Html.ActionLink("Profit", "Index", "Profits")</li>
                        <li>@Html.ActionLink("Purchases", "Index", "Purchases")</li>
                        <li>@Html.ActionLink("Status", "Index", "Status")</li>
                        <li>@Html.ActionLink("User Deposits", "Index", "UserDeposits")</li>
                        <li>@Html.ActionLink("User Works", "Index", "UserWorks")</li>
                        <li><a class="nav-link" href="/Account/Logoff">Sign out</a></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sign In", "Login", "Account")</li>
                        <li>@Html.ActionLink("Sign Up", "Register", "Account")</li>
                    }




                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="min-height: 750px;">




        @RenderBody()
       

    </div>



        <hr />
        <footer >
            <p> Kholidullayeva Diana  </p>
        </footer>

   

    @Scripts.Render("~/bundles/jquery")
   
    @Scripts.Render("~/bundles/bootstrap")
 
    @RenderSection("scripts", required: false)
</body>
</html>
